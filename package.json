{
	"name": "copilot-prompts-launcher",
	"displayName": "Copilot & Gemini Prompts Launcher",
	"description": "Easily save, manage, and use custom prompts for AI assistants like GitHub Copilot and Google Gemini in VS Code.",
	"version": "0.1.0",
	"publisher": "your-publisher-name",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other",
		"AI"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "copilot-prompts-launcher.showPrompts",
				"title": "Prompts: Show & Use Prompt"
			},
			{
				"command": "copilot-prompts-launcher.savePrompt",
				"title": "Prompts: Save Selection as Prompt"
			},
			{
				"command": "copilot-prompts-launcher.deletePrompt",
				"title": "Prompts: Delete a Prompt"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "copilot-prompts-launcher.savePrompt",
					"group": "9_cutcopypaste@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "copilot-prompts-launcher.showPrompts",
				"key": "ctrl+alt+p",
				"mac": "cmd+alt+p"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.80.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3",
		"@vscode/test-electron": "^2.3.2"
	}
}